<mvc:View
	controllerName="com.sap.workout.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/sap/workout/model/formatter'
	}">

	<Page
		title="SAP BODYWEIGHT WORKOUT"
		id="mainPage">
		<content>
            <f:GridList
                id="workoutsList"
                items="{path: 'workoutsModel>/workouts', sorter: {path:'name', group:false, descending: false}}"
                noDataText="No workouts">
                <f:customLayout>
                    <grid:GridBoxLayout/>
                </f:customLayout>
                <f:items>
                    <CustomListItem  type="Active" press=".navToWorkout">
                        <layoutData>
                            <FlexItemData
                                growFactor="1"
                                shrinkFactor="0"/>
                        </layoutData>
                        <HBox justifyContent="SpaceBetween">
                            <VBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
                                <Title text="{workoutsModel>name} {workoutsModel>roundsExercises}"/>
                                <Label text="Level {workoutsModel>level}"/>
                            <ObjectNumber number="{workoutsModel>duration}" unit="min"/>
                            </VBox>
                            <core:Icon
                                src="sap-icon://physical-activity"
                                color="{path: 'workoutsModel>level', formatter:'.formatIconColor'}"
                                size="2.5rem"
                                class="sapUiSmallMarginTop sapUiSmallMarginEnd"/>
                        </HBox>
                    </CustomListItem>
                </f:items>
                <f:noData>
                    <IllustratedMessage enableVerticalResponsiveness="true" illustrationType="sapIllus-EmptyList"/>
                </f:noData>
            </f:GridList>
		</content>
	</Page>

</mvc:View>
